# Mongo connection string, ví dụ local
DATABASE_URL=mongodb://localhost:27017/dline
# Nếu muốn đổi tên database (mặc định dline)
MONGODB_DB=dline

# NextAuth secret (bắt buộc cho production)
AUTH_SECRET=your-secret-key-here
# Hoặc sử dụng NEXTAUTH_SECRET (NextAuth cũng hỗ trợ)
NEXTAUTH_SECRET=your-secret-key-here

# API key cho Gemini (tuỳ chọn)
# Lấy API key tại: https://aistudio.google.com/apikey
GEMINI_API_KEY=your-gemini-api-key-here

